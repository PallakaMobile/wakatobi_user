<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_trans80">

    <ps.salam.wakatobi.widget.TouchImageView
        android:id="@+id/tiv_product_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="@dimen/dimen70"
        android:layout_height="@dimen/dimen70"
        android:layout_gravity="center"
        android:indeterminateDrawable="@drawable/progressbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@color/black_trans80"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:padding="@dimen/default_margin_half"
            android:textColor="@color/white_50" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight="0.2"
            android:gravity="end"
            android:padding="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_close"
            tools:ignore="ContentDescription" />
    </LinearLayout>
</FrameLayout>