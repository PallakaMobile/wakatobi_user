<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <corners android:bottomLeftRadius="@dimen/dimen5" android:bottomRightRadius="@dimen/dimen5" android:topLeftRadius="@dimen/dimen5" android:topRightRadius="@dimen/dimen5" />
            <solid android:color="@color/colorPrimary" />
            <stroke android:width="1dp" android:color="@color/colorPrimary" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="@dimen/dimen5" android:bottomRightRadius="0dp" android:topLeftRadius="@dimen/dimen5" android:topRightRadius="0dp" />
            <solid android:color="@color/transparent" />
            <stroke android:width="1dp" android:color="@color/transparent" />
        </shape>
    </item>
</selector>